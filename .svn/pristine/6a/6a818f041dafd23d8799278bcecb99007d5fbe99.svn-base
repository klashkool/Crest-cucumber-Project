package com.AccountsPayable_Modules;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Set;

import org.apache.log4j.Logger;
import org.junit.Assert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.Select;
import org.openqa.selenium.support.ui.WebDriverWait;

import com.Utils.Base;
import com.Utils.CrestTestDataReader;
import com.Utils.ExcelReader;
import com.Utils.ExcelWriter;

public class AP_Payments extends Base {

	static WebDriverWait wait = new WebDriverWait(driver, 100);
	public static Logger log = Logger.getLogger(AP_Payments.class);
	static List<HashMap<String, String>> PO_Inv_data = CrestTestDataReader.getPOInvData();

	public static void Payments() throws InterruptedException {

		log.info("Making Payments for all the Invoice ID");
		driver.findElement(By.linkText("ACCOUNTS PAYABLE")).click();
		driver.findElement(By.xpath("//*[@id='app-navigation']/ul/li/ul/li[4]/a")).click();// Payments
		driver.findElement(By.xpath("//*[@id='searchContainer']/div[1]/ul/li[2]/a")).click();// Create Payments

		// Organization Dropdown
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("partyIdFrom")));
		Select Org_DD = new Select(driver.findElement(By.id("partyIdFrom")));
		Org_DD.selectByVisibleText(PO_Inv_data.get(0).get("Organization"));

		// Payment Type Dropdown
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("paymentTypeId")));
		Select Paytype_DD = new Select(driver.findElement(By.id("paymentTypeId")));
		Paytype_DD.selectByVisibleText("Vendor Payment");

		// PartyID
		driver.findElement(By.name("partyIdTo")).sendKeys("10020");// Metal Shop

		// Account Dropdown
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("paymentMethodId")));
		Select Acct_DD = new Select(driver.findElement(By.id("paymentMethodId")));
		Acct_DD.selectByVisibleText("ICICI-2960");

		// Payment Method
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("paymentMethod")));
		Select Paymethd_DD = new Select(driver.findElement(By.id("paymentMethod")));
		Paymethd_DD.selectByVisibleText("Cash");

		// Numbering Type
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("numberingFormatId")));
		Select NumType_DD = new Select(driver.findElement(By.id("numberingFormatId")));
		NumType_DD.selectByVisibleText("Payables Pay");

		// Currency
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("currencyUomId")));
		Select Cur_DD = new Select(driver.findElement(By.id("currencyUomId")));
		Cur_DD.selectByVisibleText("INR");

		driver.findElement(By.xpath("//*[@id='content-main-section']/div/div[2]/form/table/tbody[1]/tr[8]/td/input"))
		.click();
		String PayID = driver
				.findElement(By.xpath("//*[@id='content-main-section']/div/div[2]/form/table/tbody[1]/tr[1]/td[2]"))
				.getText();
		ExcelWriter.writeExcelFile("PO_Inv", 15, 7, PayID);

		driver.findElement(By.xpath("/html/body/div[2]/div[4]/div[1]/ul/li/ul/li[3]/a")).click();// Application link

		ArrayList<String> Invlist = new ArrayList<String>();

		for (int j = 14; j <= 17; j++) {
			Invlist.add(PO_Inv_data.get(j).get("Currency"));
		}
		System.out.println(Invlist);

		List<WebElement> Inv_Pay_tble = driver
				.findElements(By.xpath("//*[@id='createPaymentApplication']/table/tbody/tr"));
		String totalTabletext = null;
		int count = 0;
		for (int y = 2; y <= Inv_Pay_tble.size(); y++) {
			String before_xpath = "//*[@id='createPaymentApplication']/table/tbody/tr[";
			String after_xpath = "]/td";
			if (count >= 4) {
				break;
			}
			totalTabletext = driver.findElement(By.xpath(before_xpath + y + after_xpath)).getText();
			System.out.println(totalTabletext);
			if (Invlist.contains(totalTabletext)) {
				// if (invoiceIDSet.contains(Integer.parseInt(totalTabletext))) {
				String before_xpath1 = "//*[@id='createPaymentApplication']/table/tbody/tr[";
				String after_xpath1 = "]/td[8]/input";
				wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath(before_xpath1 + y + after_xpath1)));
				driver.findElement(By.xpath(before_xpath1 + y + after_xpath1)).click();
				Thread.sleep(2000);
				count++;
			}
		}
		driver.findElement(By.xpath("//*[@id='createPaymentApplication']/div/input")).click();
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.linkText("Sent")));
		driver.findElement(By.linkText("Sent")).click();

		wait.until(ExpectedConditions.visibilityOfElementLocated(By.linkText("Confirm")));
		driver.findElement(By.linkText("Confirm")).click();

		String Pymt_Status = driver
				.findElement(By.xpath("//*[@id='content-main-section']/div[1]/div[2]/table/tbody[1]/tr[1]/td[4]"))
				.getText();
		Assert.assertEquals("Confirmed", Pymt_Status);

		driver.findElement(By.xpath("//*[@id='content-main-section']/div[3]/div[2]/table/tbody/tr[2]/td[3]/a")).click();// Click
		// PO
		// num

		List<WebElement> InvID_List = driver
				.findElements(By.xpath("//*[@id='content-main-section']/div[5]/div[2]/table/tbody/tr"));
		System.out.println(InvID_List.size());

		for (int Inv = 1; Inv <= InvID_List.size(); Inv++) {
			String Inv_sts = driver
					.findElement(
							By.xpath("//*[@id='content-main-section']/div[5]/div[2]/table/tbody[" + Inv + "]/tr/td[4]"))
					.getText();
			Assert.assertEquals("Paid", Inv_sts);

		}

	}

}
